<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="90dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/album_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="74dp"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"
                android:src="@drawable/place_holder_cover"
                android:id="@+id/album_card_art_image"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/album_card_art_image"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/album_card_name"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="21sp"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="DeadWing"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/album_card_num_songs"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:text="11 Songs"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/album_card_year"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="2005"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_more_vert_black_48dp"
                android:id="@+id/album_card_more_button"
                android:scaleType="centerInside" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout><!-- From: file:/Users/Parsoa/Desktop/Projects/Allegro/allegro/app/src/main/res/layout/card_list_item_album.xml -->