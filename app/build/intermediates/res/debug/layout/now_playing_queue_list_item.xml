<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/drag_handle"
            android:src="@drawable/ic_reorder_white_36dp"
            android:layout_width="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:layout_height="match_parent" />

        <!--<ImageView-->
            <!--android:layout_width="70dp"-->
            <!--android:src="@drawable/place_holder_cover"-->
            <!--android:scaleType="fitXY"-->
            <!--android:id="@+id/queue_list_item_album_cover"-->
            <!--android:layout_height="match_parent" />-->

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/queue_list_item_song_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textColorPrimary"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Song Name"/>

            <TextView
                android:id="@+id/queue_list_item_album_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/textColorPrimary"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:text="Artist - Album Name"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout><!-- From: file:/Users/Parsoa/Desktop/Projects/Allegro/allegro/app/src/main/res/layout/now_playing_queue_list_item.xml -->