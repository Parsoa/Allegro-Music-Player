<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/play_pause_handle"
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
    tools:showIn="@layout/activity_main">

<ImageView
    android:id="@+id/artwork_container"
    android:layout_width="?attr/actionBarSize"
    android:layout_height="?attr/actionBarSize"
    android:padding="3dp"
    android:layout_gravity="center_vertical"
    />

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_marginLeft="8dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/big_text"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/handle_main_text"
        android:ellipsize="end"
        android:lines="1"
        android:text="big text"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="small caption"
        android:textColor="@color/old_list_item_caption_text"
        />

</LinearLayout>

<Button
    android:id="@+id/play_pause_button"
    android:background="@drawable/ic_play_arrow_black_36dp"
    android:layout_margin="5dp"
    android:layout_width="@dimen/play_pause_button_dims"
    android:layout_height="@dimen/play_pause_button_dims"
    android:layout_gravity="center_vertical" />

</LinearLayout>